rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper to check if the user is modifying their own founder entry
    // (Assuming 'founder' field matches auth token name or email, depending on your logic.
    //  For now, we'll just strict it to signed-in users)
    
    // Allow read/write access to all users under the specific App ID
    match /artifacts/{appId}/public/data/{document=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
    
    // Allow users to read/write their own user profile
    match /artifacts/{appId}/public/users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
